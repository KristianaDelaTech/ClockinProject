generator client {
  provider = "prisma-client-js"
}


datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}
model User {
  id       Int    @id @default(autoincrement())
  username     String @unique
  email    String @unique
  role     String
  password String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  absences  Absence[]
}

model Holidays {
  id       Int    @id @default(autoincrement())
  date     String 
  holiday    String 
}

model Projects {
  id       Int    @id @default(autoincrement())
  company     String 
  project    String 
}


enum AbsenceType {
  VACATION
  SICK
  PERSONAL
  PARENTAL
}

model Absence {
  id        String       @id @default(uuid())
  startDate DateTime
  endDate   DateTime
  type      AbsenceType

  userId    Int
  user      User         @relation(fields: [userId], references: [id])
}
